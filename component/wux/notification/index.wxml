<wux-animation-group bind:click="onClick" classNames="{{ classNames }}" in="{{ in }}" wux-class="{{ classes.wrap }}">
    <view class="{{ classes.content }}">
        <view class="{{ classes.hd }}" wx:if="{{ image }}">
            <image class="{{ classes.image }}" src="{{ image }}"/>
        </view>
        <view class="{{ classes.bd }}" wx:if="{{ title || text }}">
            <view class="{{ classes.title }}" wx:if="{{ title }}">{{ title }}</view>
            <view class="{{ classes.text }}" wx:if="{{ text }}">{{ text }}</view>
        </view>
        <view class="{{ classes.ft }}"></view>
    </view>
</wux-animation-group>
