/* pages/mine/mine.wxss */


.my-card {
    position: relative;
    top: 20rpx;
    left: 30rpx;
    height: 250rpx;
    width: 85%;
    padding: 20rpx;
    background: #f5f5f5;
    box-shadow: 0px 0px 14px #D4D4D4;
    border-radius: 20rpx;
    margin-bottom: 70rpx;
    margin-top: 10rpx;
}

.avatar-box {
    position: relative;
    top: 15rpx;
    left: 25rpx;
}

.major-box {
    font-size: 26rpx;
}

.gender-box {
    display: inline-block;
    position: relative;
    top: 10rpx;
    width: 50rpx;
    height: 50rpx;
}


.identity-box {
    position: relative;
    top: 10rpx;
    color: gray;
    font-size: 28rpx;
}

.to-auth {
    position: absolute;
    top: 75rpx;
    right: 50rpx;
    width: 130rpx;
    height: 130rpx;
    border-radius: 130rpx;
    box-shadow: 0px 0px 14px rgb(189, 176, 176);
    color: white;
    font-size: 28rpx;
    text-align: center;
    line-height: 130rpx;
    background: #ef473a;
}

.my-star, .my-comment {
    width: 100%;
    height: 100rpx;
}