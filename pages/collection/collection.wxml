<block wx:if="{{courseList!=null}}">
    <block wx:for="{{courseList}}" wx:key="courseCode">
        <view bindtap="goToCourse" data-code="{{item.courseCode}}" style='border-bottom: 1rpx solid #f5f5f5;'>
            <van-row style="padding: 6rpx; ">

                <van-col span='6'>
                    <view class="avatar-box">
                        <avatar body-style="background-color: #ef473a; width: 100rpx; height: 100rpx; border-radius: 100rpx; line-height: 100rpx;"
                                scale>
                            {{filters.subStr(item.courseName,0,1)}}
                        </avatar>
                    </view>
                </van-col>

                <van-col span='18'>
                    <view style="font-size: 26rpx; font-weight: 600;">
                        {{item.courseName}}
                    </view>
                    <view style="font-size: 24rpx;">
                        {{item.unitName}}
                    </view>
                    <view>
                        <block wx:if="{{item.courseType==1}}">
                            <van-tag plain type="danger">必修</van-tag>
                        </block>
                        <block wx:elif="{{item.courseType==2}}">
                            <van-tag plain type="danger">选修</van-tag>
                        </block>
                    </view>

                </van-col>
            </van-row>
        </view>
    </block>
</block>